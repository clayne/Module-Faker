#!perl
use v5.20.0;
use warnings;

use Getopt::Long::Descriptive;
use Module::Faker;

my ($opt, $desc) = describe_options(
  '%c %o',
  [ 'src|s=s',  "source directory",       { required => 1 } ],
  [ 'dest|d=s', "destination directory",  { required => 1 } ],
);

Module::Faker->make_fakes({
  source => $opt->src,
  dest   => $opt->dest,
});
